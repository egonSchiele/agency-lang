node greetUser() {
  name = input("What is your name?");
  language = input("What language do you speak? (English, Spanish, French, German)");

  match(language) {
    "English" => greeting = `Hello, ${name}!`;
    "Spanish" => greeting = `Â¡Hola, ${name}!`;
    "French" => greeting = `Bonjour, ${name}!`;
    "German" => greeting = `Hallo, ${name}!`;
    _ => greeting = `Hello, ${name}! (Language not supported)`;
  }

  print(greeting);
}

node main() {
  return greetUser();
}