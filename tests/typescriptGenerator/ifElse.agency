// Basic if statement with boolean variable
flag = true
if (flag) {
  result = "condition was true"
}

// If-else statement with number
x = 5
if (x) {
  positive = true
} else {
  negative = false
}

// If-else with function call condition
def isReady() {
  return true
}

if (isReady()) {
  status = "ready"
} else {
  status = "not ready"
}

// If statement with property access
obj :: { active: boolean }
obj = { active: true }
if (obj.active) {
  message = "object is active"
}

// Nested if statements
outer = true
if (outer) {
  inner = false
  if (inner) {
    nested = "both true"
  } else {
    nested = "outer only"
  }
}

// If with index access
arr :: [number]
arr = [1, 2, 3]
if (arr[0]) {
  firstElement = "exists"
}

// Multiple statements in then body
condition = true
if (condition) {
  a = 1
  b = 2
  c = 3
}

// Multiple statements in both then and else bodies
value = false
if (value) {
  x = 10
  y = 20
} else {
  x = 30
  y = 40
}
