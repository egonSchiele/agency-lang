def greet(name: string): string {
  print("About to try and greet ${name}...")
  return interrupt("Do you want to greet ${name}?")
  return interrupt("2nd interrupt")
  return "Kya chal raha jai, ${name}!"
}

node sayHi(name) {
  print("Saying hi to ${name}...")
  +greet
  response = llm("Greet the user with their name: ${name} using the greet function.")
  print(response)
  print("Greeting sent.")
  return response
}